{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "target": "es6",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "removeComments": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*",
    "index/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
